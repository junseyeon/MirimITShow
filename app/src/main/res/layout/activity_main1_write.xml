<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".Main1WriteActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

         <EditText
        android:id="@+id/write_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
             android:layout_weight="1"
        android:hint="TITLE"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/write_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="(익명) 아무거나 작성"
            android:background="@null"
            android:layout_weight="1"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <EditText
        android:id="@+id/write_contents_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="contents"
        android:lines="5" android:gravity="top|left" android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:minWidth="10.0dip"
        android:maxWidth="5.0dip"/>


    <Button
        android:id="@+id/write_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업로드"
        tools:ignore="HardcodedText" />
</LinearLayout>